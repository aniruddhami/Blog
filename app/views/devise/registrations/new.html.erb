<br>
<center>
  <div class="card border-success mb-3" style="max-width: 18rem;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="card-header bg-transparent border-success"><b>Sign Up</b></div>
      <div class="card-body text-success">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class:"form-control",  autocomplete: "email", placeholder:"Enter Email" %>
        </div>
        <div class="form-group">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",  class:"form-control", placeholder:"Enter Password" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation,  class:"form-control", autocomplete: "new-password", placeholder:"Confirm Email" %>
        </div>
      </div>
      <div class="card-footer bg-transparent border-success">
        <center>
          <%= f.submit "Sign up", class:"btn btn-success" %>
        </center>
        <center>
          Already An User ?
          <%= render "devise/shared/links" %>
        </center>
      </div>
    <% end %>
  </div>
</center>